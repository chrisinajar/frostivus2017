      <Image class="Comic act4_1" src="file://{images}/custom_game/comics/act4_1.png" />
      <Panel id="SkipPanel">
        <Button id="SkipButton" onactivate="VoteToSkip()">
          <Label class="SkipHeader" text="Skip" />
          <Label id="SkipVoteLabel" text="0/5" />
        </Button>
      </Panel>
    </Panel>
